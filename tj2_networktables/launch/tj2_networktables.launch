<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <arg name="publish_odom_tf" default="true"/>

    <arg name="robot_type" default="bb-88"/>
    <!-- <arg name="robot_type" value="diff-swerve"/> -->

    <group ns="tj2">
        <node if="$(eval robot_type == 'diff-swerve')" name="diff_swerve_network_tables" pkg="tj2_networktables" type="diff_swerve_nt_node.py" output="screen" required="true">
            <param name="publish_odom_tf" value="$(arg publish_odom_tf)"/>
            <param name="cmd_vel_timeout" value="2.0"/>
        </node>
        <node if="$(eval robot_type == 'bb-88')" name="bb_88_network_tables" pkg="tj2_networktables" type="bb_88_nt_node.py" output="screen" required="true">
            <param name="publish_odom_tf" value="$(arg publish_odom_tf)"/>
            <param name="cmd_vel_timeout" value="2.0"/>
        </node>
    </group>
</launch>
