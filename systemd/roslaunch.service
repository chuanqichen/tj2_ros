[Unit]
Wants=roscore.service
After=NetworkManager.service time-sync.target
Description=TJ2 roslaunch

[Service]
Type=simple
User=tj2
Group=tj2
ExecStart=/usr/local/bin/roslaunch.sh

Restart=always
RestartSec=300
StartLimitBurst=30

KillSignal=SIGINT
TimeoutStopSec=10

[Install]
WantedBy=multi-user.target
